<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Pages.GRAPH" BackgroundColor="White"
             Title="GRAPH">
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Padding="30">
            <Image Source="bmiresult.png" Aspect="Fill" />
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" HeightRequest="100" Margin="0,70,0,0">
            <Button Text="Podváha" x:Name="underweight" Clicked="underweight_Clicked" CornerRadius="8" Background="#53CEE9" TextColor="White" FontAttributes="Bold" FontSize="19" Padding="30"/>
            <Button Text="Nadváha" x:Name="overweight" Clicked="overweight_Clicked"  CornerRadius="8" Background="orange" TextColor="White" FontAttributes="Bold" FontSize="19" Padding="30"/>
        </HorizontalStackLayout>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="End" Padding="150">
            <Button Text="Zpět ->" x:Name="Back" Clicked="Back_Clicked" TextColor="White" FontAttributes="Bold" BackgroundColor="Green" WidthRequest="120"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>